---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Layout from "../../layouts/BaseLayout.astro";

type Props = {
  post: CollectionEntry<"posts">;
};

const normalize = (t: string) => t.trim().toLowerCase();

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as Props;
const { Content } = await post.render();

const tags = (post.data.tags ?? []).map(normalize).filter(Boolean);
---

<Layout title={post.data.title}>
  <main class="container mx-auto px-4 py-10">
    <a class="text-sm opacity-70 hover:opacity-100" href="/posts/">‚Üê Posts</a>

    <header class="mt-4">
      <h1 class="text-3xl font-bold">{post.data.title}</h1>

      <div class="mt-2 text-sm opacity-70">
        {post.data.pubDate.toISOString().slice(0, 10)}
      </div>

      {tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              class="inline-flex items-center rounded-full border px-3 py-1 text-xs opacity-80 hover:opacity-100 transition"
              href={`/tags/${encodeURIComponent(tag)}/`}
            >
              #{tag}
            </a>
          ))}
        </div>
      )}

      {post.data.description && (
        <p class="mt-4 text-base opacity-80">{post.data.description}</p>
      )}
    </header>

    <article class="markdown mt-8">
      <Content />
    </article>
  </main>
</Layout>
