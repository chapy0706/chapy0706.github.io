---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Button from '@components/ui/Button.astro';
import TestimonialCard from '@components/ui/TestimonialCard.astro';
import UseCaseTabs from '@components/react/UseCaseTabs';
import StatsCards from '@components/react/StatsCards';
import ProjectGrid from '@components/projects/ProjectGrid.astro';
