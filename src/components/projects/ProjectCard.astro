---
import type { Project } from '@config/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { name, summary, links, structure, techStack, highlights } = project;

const linkItems = [
  { label: 'Repo', href: links.repo },
  { label: 'Production', href: links.production },
  { label: 'Docs', href: links.docs }
];
---

<article class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-lg shadow-slate-200/40 transition hover:-translate-y-1 hover:shadow-xl">
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-500">Project</p>
      <h3 class="mt-2 text-3xl font-bold text-slate-900">{name}</h3>
      <p class="mt-3 text-base text-slate-600">{summary}</p>
    </div>
    <div class="flex flex-wrap gap-2">
      {linkItems.map((item) => (
        item.href ? (
          <a
            class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900"
            href={item.href}
            target="_blank"
            rel="noreferrer"
          >
            {item.label}
          </a>
        ) : (
          <span
            class="inline-flex items-center gap-2 rounded-full border border-dashed border-slate-200 px-4 py-2 text-sm font-semibold text-slate-400"
          >
            {item.label} TBD
          </span>
        )
      ))}
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-500">構成</p>
      <ul class="mt-3 space-y-2 text-sm text-slate-600">
        {structure.map((item) => (
          <li class="flex items-start gap-2">
            <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-slate-300"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-500">技術</p>
      <ul class="mt-3 space-y-2 text-sm text-slate-600">
        {techStack.map((item) => (
          <li class="flex items-start gap-2">
            <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-slate-300"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-500">見どころ</p>
      <ul class="mt-3 space-y-2 text-sm text-slate-600">
        {highlights.map((item) => (
          <li class="flex items-start gap-2">
            <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-slate-300"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</article>
